{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "strongloop",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "max-len": "off",
    "handle-callback-err": "warn",
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }]
  }
}
